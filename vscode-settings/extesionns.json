{
  "python.pythonPath": ".venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "autopep8",

  "isort.defaultConfig": "black",

  "gitHistory.showUncommitted": true,

  "rest-client.enableTelemetry": false,

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "colorHighlight.languages": [
    "html",
    "css",
    "javascript",
    "typescript",
    "scss",
    "less"
  ],

  "liveServer.settings.port": 5500,
  "liveServer.settings.root": "/path/to/your/project/root",

  "django.envFile": "${workspaceFolder}/.env",
  "django.framework": "Django",
  "django.managePy": "${workspaceFolder}/manage.py"
}
